<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.MainFragment"
        android:label="MainFragment"
        />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_phoneLoginFragment"
            app:destination="@id/phoneLoginFragment"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/phoneLoginFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.PhoneLoginFragment"
        android:label="PhoneLoginFragment" >
        <action
            android:id="@+id/action_phoneLoginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_in"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"
            app:popUpTo="@id/phoneLoginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/bookingConfirmedFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.BookingConfirmedFragment"
        android:label="BookingConfirmedFragment" >
        <action
            android:id="@+id/action_bookingConfirmedFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/bookingConfirmedFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_booking_finished"
        app:destination="@id/bookingConfirmedFragment"
        app:enterAnim="@anim/anim_slide_in"
        app:exitAnim="@anim/anim_slide_out"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/anim_slide_in"
        app:popExitAnim="@anim/anim_slide_out"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="false" />
</navigation>