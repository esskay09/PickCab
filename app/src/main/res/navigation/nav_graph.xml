<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"/>
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/bookingConfirmedFragment"
        android:name="com.terrranullius.pickcab.ui.fragments.BookingConfirmedFragment"
        android:label="BookingConfirmedFragment">
        <action
            android:id="@+id/action_bookingConfirmedFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/bookingConfirmedFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"/>
    </fragment>
    <action
        android:id="@+id/action_global_booking_finished"
        app:destination="@id/bookingConfirmedFragment"
        app:enterAnim="@anim/anim_slide_in"
        app:exitAnim="@anim/anim_slide_out"
        app:launchSingleTop="true"
        app:popEnterAnim="@anim/anim_slide_in"
        app:popExitAnim="@anim/anim_slide_out"
        app:popUpTo="@id/mainFragment"
        app:popUpToInclusive="false" />
    <fragment
        android:id="@+id/login"
        android:name="com.terrranullius.pickcab.ui.fragments.Login"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_OTPConfirmation"
            app:destination="@id/OTPConfirmation"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/OTPConfirmation"
        android:name="com.terrranullius.pickcab.ui.fragments.OTPConfirmation"
        android:label="OTPConfirmation">
        <action
            android:id="@+id/action_OTPConfirmation_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/anim_slide_in"
            app:exitAnim="@anim/anim_slide_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/anim_slide_in"
            app:popExitAnim="@anim/anim_slide_out"
            app:popUpTo="@id/OTPConfirmation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_OTPConfirmation_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/OTPConfirmation"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>